// SPA navigation
document.querySelectorAll('.menu a').forEach(a=>{
  a.onclick=e=>{
    e.preventDefault();
    document.querySelectorAll('.menu a').forEach(el=>el.classList.remove('active'));
    a.classList.add('active');
    let page=a.dataset.page;
    document.querySelectorAll('main section').forEach(s=>s.hidden=true);
    document.getElementById(page).hidden=false;
    window.scrollTo(0,0);
    if(page==="diseases") {renderDiseases();}
    if(page==="doctors") {renderDoctors();}
    if(page==="alerts") {renderAlerts();}
  }
});
// B·ªánh l√Ω
function renderDiseases(filter=''){
  let g=document.getElementById('diseaseGrid');g.innerHTML='';
  DISEASES.forEach((d,idx)=>{
    if(!filter||d.name.toLowerCase().includes(filter)||d.desc.toLowerCase().includes(filter)){
      let div=document.createElement('div');
      div.className='disease-card';div.style.animationDelay=(idx*0.09)+'s';
      div.innerHTML=`<img src="${d.img}" alt="${d.name}"><div class="disease-name">${d.name}</div><div class="disease-desc">${d.desc}</div>
      <button class="view-detail-btn" onclick="showModal(DISEASES[${idx}],false);event.stopPropagation()">Chi ti·∫øt</button>`;
      div.onclick = () => showModal(d,false);
      g.appendChild(div);
    }
  });
}
function filterDiseases(){
  let val=document.getElementById('diseaseSearch').value.trim().toLowerCase();
  renderDiseases(val);
}
// B√°c sƒ©
function renderDoctors(){
  let g=document.getElementById('doctorGrid');g.innerHTML='';
  DOCTORS.forEach((d,idx)=>{
    let div=document.createElement('div');
    div.className='doctor-card';div.style.animationDelay=(idx*0.12)+'s';
    div.innerHTML=`
      <img class="doctor-avatar" src="${d.img}" alt="${d.name}">
      <div class="doctor-info">
        <strong>${d.name}</strong>
        <div class="doctor-meta">${d.meta}</div>
        <div class="contact-buttons">
          <a href="tel:${d.tel}" class="call">G·ªçi ƒëi·ªán</a>
          <a href="https://zalo.me/${d.zalo}" class="zalo" target="_blank">Zalo</a>
          <a href="mailto:${d.mail}" class="mail">Email</a>
        </div>
      </div>
      <button class="view-detail-btn" onclick="showModal(DOCTORS[${idx}],true);event.stopPropagation()">Chi ti·∫øt</button>
    `;
    div.onclick = () => showModal(d,true);
    g.appendChild(div);
  });
}
// C·∫£nh b√°o
function renderAlerts(){
  let g=document.getElementById('alertsGrid');g.innerHTML='';
  ALERTS.forEach((a,idx)=>{
    let div=document.createElement('div');
    div.className='alert-card';
    div.innerHTML=`<div class="alert-title">${a.title}</div><div class="alert-desc">${a.desc}</div>`;
    div.onclick = () => showModal(a,"alert");
    g.appendChild(div);
  });
}
// Modal popup
function showModal(data,type){
  document.getElementById('popupImg').src = data.img||"https://cdn-icons-png.flaticon.com/512/2830/2830308.png";
  document.getElementById('popupTitle').textContent = data.name||data.title||"Th√¥ng tin";
  document.getElementById('popupDesc').textContent = type==="alert"?data.detail:(data.detail||(data.desc)||"");
  document.getElementById('popupOverlay').style.display='flex';
}
  // B·ªï sung b√™n d∆∞·ªõi c√°c h√†m ƒë√£ c√≥
document.getElementById('loginBtn').onclick = function(e){
  e.preventDefault();
  document.getElementById('loginModal').style.display = 'flex';
}
function closeLogin(){
  document.getElementById('loginModal').style.display = 'none';
  document.getElementById('loginMsg').textContent = '';
  document.getElementById('loginUser').value = '';
  document.getElementById('loginPass').value = '';
}
function doLogin(e){
  e.preventDefault();
  const user = document.getElementById('loginUser').value.trim();
  const pass = document.getElementById('loginPass').value.trim();
  // Demo: t√†i kho·∫£n "admin", m·∫≠t kh·∫©u "123456"
  if(user==="admin" && pass==="123456"){
    document.getElementById('loginMsg').style.color = "#24b347";
    document.getElementById('loginMsg').textContent = "ƒêƒÉng nh·∫≠p th√†nh c√¥ng!";
    setTimeout(()=>{
      closeLogin();
