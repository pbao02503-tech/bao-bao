// SPA navigation
document.querySelectorAll('.menu a').forEach(link=>{
  link.onclick = function(){
    document.querySelectorAll('.menu a').forEach(l=>l.classList.remove('active'));
    this.classList.add('active');
    let page = this.dataset.page || 'home';
    document.querySelectorAll('main > section').forEach(s=>s.hidden=true);
    document.getElementById(page).hidden = false;
    if(page==='home') renderDiseases();
    if(page==='benh') renderBenhGrid();
    if(page==='bacsi') renderDoctors();
    window.scrollTo(0,0);
    return false;
  }
});

// Trang chủ: grid bệnh nhỏ (4), vào trang bệnh xem tất cả
function renderDiseases() {
  let grid = document.getElementById('diseaseGrid'); grid.innerHTML='';
  diseasesData.slice(0,4).forEach((d,idx)=>{
    let card=document.createElement('div');
    card.className='disease-card';
    card.innerHTML=`<img src="${d.img}" alt="${d.name}">
      <div class="disease-info"><h3>${d.name}</h3>
      <div class="meta">${d.desc}</div>
      <button class="view-detail-btn" onclick="showDetail('${idx}');event.stopPropagation();">Xem chi tiết</button></div>`;
    grid.appendChild(card);
  });
}
renderDiseases();

// Trang tra cứu bệnh — card lớn + hình phụ
function renderBenhGrid(filter='') {
  let grid=document.getElementById('benhGrid'); grid.innerHTML='';
  diseasesData.forEach((d,idx)=>{
    if(filter===''||d.name.toLowerCase().includes(filter)||d.desc.toLowerCase().includes(filter)){
      let card=document.createElement('div');
      card.className='disease-card'; // dùng chung class cho đẹp
      let imgs = d.images && d.images.length ? `<div class="card-images">${d.images.slice(0,3).map(i=>`<img src="${i}" alt="">`).join('')}</div>` : '';
      card.innerHTML=`
        <img src="${d.img}" alt="${d.name}">
        ${imgs}
        <div class="disease-info"><h3>${d.name}</h3>
        <div class="meta">${d.desc}</div>
        <button class="view-detail-btn" onclick="showDetail('${idx}');event.stopPropagation();">Xem chi tiết</button></div>`;
      grid.appendChild(card);
    }
  });
}
window.renderBenhGrid = renderBenhGrid;
renderBenhGrid();

// Trang bác sĩ: grid đẹp
function renderDoctors() {
  let grid=document.getElementById('doctorGrid'); grid.innerHTML='';
  doctorData.forEach(doc=>{
    let div=document.createElement('div');
    div.className='doctor-card';
    div.innerHTML=`
      <img src="${doc.img}" alt="Bác sĩ">
      <div class="doctor-info">
        <strong>${doc.name}</strong>
        <div class="meta">${doc.meta}</div>
        <div class="contact-buttons">
          <a href="tel:${doc.phone}" class="call">Gọi</a>
          <a href="https://zalo.me/${doc.zalo}" class="zalo" target="_blank">Zalo</a>
          <a href="mailto:${doc.email}" class="mail">Mail</a>
        </div>
      </div>
    `;
    grid.appendChild(div);
  })
}
renderDoctors();

// Chi tiết bệnh — web phụ, hình lớn, attr, details, nút quay lại
function showDetail(idx){
  let d = diseasesData[idx];
  document.querySelectorAll('main > section').forEach(s=>s.hidden=true);
  let wrap = document.getElementById('detailCard');
  let otherImgs = d.images && d.images.length ? d.images.slice(0,3).map(i=>`<img src="${i}" alt="">`).join('') : '';
  wrap.innerHTML = `
    <a class="back-link" href="#" onclick="backFromDetail();return false;">← Trở về</a>
    <div class="disease-detail-main">
      <div class="disease-main-img"><img src="${d.img}" alt="${d.name}"></div>
      <div class="disease-detail-content">
        <h2 class="disease-detail-title">${d.name}</h2>
        <ul class="disease-attrs">${d.details.map(t=>`<li>${t}</li>`).join('')}</ul>
        ${otherImgs?'<div style="margin-top:21px;">'+otherImgs+'</div>':''}
      </div>
    </div>
  `;
  document.getElementById('disease-detail').hidden=false;
}
window.showDetail = showDetail;
window.backFromDetail = function(){
  document.getElementById('disease-detail').hidden = true;
  document.querySelectorAll('main > section').forEach((s,idx) => {
    // quay về từ trang chủ hay tra cứu bệnh
    if(idx===0 || !document.getElementById('benh').hidden) s.hidden=false; // nếu đang tab "bệnh" thì về bệnh, còn lại về home
    else s.hidden=true;
  });
  window.scrollTo(0,0);
}

// Tìm kiếm chủ động từ trang chủ
window.searchDisease = function(){
  const filter = (document.getElementById('searchInput').value||'').trim().toLowerCase();
  // renderBenhGrid(filter);
  document.querySelectorAll('.menu a').forEach(l=>l.classList.remove('active'));
  document.querySelector('.menu a[data-page="benh"]').classList.add('active');
  document.querySelectorAll('main > section').forEach(s=>s.hidden=true);
  document.getElementById('benh').hidden=false;
  renderBenhGrid(filter);
}
</script>
</body>
</html>
