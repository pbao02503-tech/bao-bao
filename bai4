// 4. Hóa đơn nhà hàng
#include <iostream>
using namespace std;
int main() {
    double meal = 88.67;
    double taxRate = 0.0675;
    double tipRate = 0.20;

    double tax = meal * taxRate;
    double subtotal = meal + tax;
    double tip = subtotal * tipRate;
    double total = subtotal + tip;

    cout << "Meal cost: " << meal << endl;
    cout << "Tax: " << tax << endl;
    cout << "Tip: " << tip << endl;
    cout << "Total bill: " << total << endl;
    return 0;
}
